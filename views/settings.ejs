<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Settings | ProNetwork</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .settings-container { max-width: 900px; margin: 30px auto; display: flex; gap: 20px; padding: 0 20px; }
        .settings-sidebar { width: 250px; background: white; border-radius: 8px; border: 1px solid #dbdbdb; height: fit-content; }
        .settings-nav-item { padding: 15px 20px; border-bottom: 1px solid #eee; cursor: pointer; color: #666; font-weight: 500; display: block; }
        .settings-nav-item:hover, .settings-nav-item.active { background: #f3f2ef; color: #0a66c2; border-left: 3px solid #0a66c2; }
        .settings-content { flex: 1; }
        .settings-card { background: white; border-radius: 8px; border: 1px solid #dbdbdb; padding: 25px; display: none; }
        .settings-card.active { display: block; }
        .settings-header { font-size: 20px; font-weight: 600; margin-bottom: 20px; padding-bottom: 15px; border-bottom: 1px solid #eee; }
        .alert { padding: 10px; border-radius: 5px; margin-bottom: 15px; font-size: 14px; }
        .alert-success { background: #d1fae5; color: #065f46; }
        .alert-error { background: #fee2e2; color: #991b1b; }
    </style>
</head>
<body>

    <%- include('./partials/navbar', { user: user }) %>

    <div class="settings-container">
        
        <div class="settings-sidebar">
            <div class="settings-nav-item active" onclick="switchTab('account')">Account Preferences</div>
            <div class="settings-nav-item" onclick="switchTab('blocklist')">Block List</div>
        </div>

        <div class="settings-content">
            
            <% if (message) { %>
                <div class="alert alert-<%= type %>"><%= message %></div>
            <% } %>

            <div id="account" class="settings-card active">
                <div class="settings-header">Account Preferences</div>
                <form action="/settings/account" method="POST">
                    <div class="form-group">
                        <label>Email Address</label>
                        <div class="input-wrapper">
                            <input type="email" name="email" value="<%= user.email %>" required>
                        </div>
                    </div>

                    <div style="margin-top: 30px; border-top: 1px solid #eee; padding-top: 20px;">
                        <h4 style="margin-bottom: 15px;">Change Password</h4>
                        <div class="form-group">
                            <label>Current Password</label>
                            <div class="input-wrapper">
                                <input type="password" name="currentPassword" placeholder="********">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>New Password</label>
                            <div class="input-wrapper">
                                <input type="password" name="newPassword" placeholder="********">
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn-primary" style="width: auto; margin-top: 15px;">Save Changes</button>
                </form>
            </div>

            <div id="blocklist" class="settings-card">
                <div class="settings-header">Block List</div>
                <div id="block-list-container">
                    <% if (blockedUsers && blockedUsers.length > 0) { %>
                        <div class="blocked-users-list">
                            <% blockedUsers.forEach(blockedUser => { %>
                                <div class="blocked-user-item" style="display: flex; align-items: center; justify-content: space-between; padding: 15px 0; border-bottom: 1px solid #eee;">
                                    <div style="display: flex; align-items: center; gap: 10px;">
                                        <% if(blockedUser.blocked.profilePicture) { %>
                                            <img src="<%= blockedUser.blocked.profilePicture %>" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;">
                                        <% } else { %>
                                            <div style="width: 40px; height: 40px; background: #ccc; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 16px;">
                                                <% if(blockedUser.blocked.firstName && blockedUser.blocked.lastName) { %>
                                                    <%= blockedUser.blocked.firstName.charAt(0) %><%= blockedUser.blocked.lastName.charAt(0) %>
                                                <% } else { %>
                                                    ??
                                                <% } %>
                                            </div>
                                        <% } %>
                                        <div>
                                            <div style="font-weight: 600;"><%= blockedUser.blocked.firstName %> <%= blockedUser.blocked.lastName %></div>
                                            <div style="font-size: 12px; color: #666;"><%= blockedUser.blocked.headline || 'No headline' %></div>
                                        </div>
                                    </div>
                                    <button onclick="unblockUser('<%= blockedUser.blocked._id %>')" class="btn-primary" style="width: auto; margin-top: 15px;">Unblock</button>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p style="text-align: center; color: #666; padding: 20px;">You haven't blocked any users yet.</p>
                    <% } %>
                </div>
            </div>

            

        </div>
    </div>

    <script>
        function switchTab(tabId) {
            document.querySelectorAll('.settings-card').forEach(c => c.classList.remove('active'));
            document.querySelectorAll('.settings-nav-item').forEach(i => i.classList.remove('active'));
            
            document.getElementById(tabId).classList.add('active');
            event.target.classList.add('active');
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/notifications.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>