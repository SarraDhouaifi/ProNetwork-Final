<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap');

        :root {
            --primary-color: #008B8B; /* Teal/Cyan */
            --sidebar-bg: #f4f6f7;
            --text-dark: #333;
            --text-light: #666;
        }

        @page { margin: 0; size: A4; }
        
        * { box-sizing: border-box; }

        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background: white;
            -webkit-print-color-adjust: exact;
        }

        /* --- 1. HEADER (Teal Banner) --- */
        .header {
            height: 180px;
            background-color: var(--primary-color);
            position: relative;
            width: 100%;
        }

        /* --- 2. LAYOUT GRID --- */
        .container {
            display: flex;
            height: 100vh; /* Full height for background colors */
        }

        .sidebar {
            width: 35%;
            background-color: var(--sidebar-bg);
            padding: 20px 30px;
            padding-top: 100px; /* Space for floating avatar */
        }

        .main-content {
            width: 65%;
            padding: 40px;
            padding-top: 30px;
        }

        /* --- 3. FLOATING AVATAR & NAME --- */
        .profile-container {
            position: absolute;
            top: 100px;
            left: 30px;
            z-index: 10;
        }

        .avatar {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 5px solid white;
            object-fit: cover;
            background: #ddd;
        }

        .header-text {
            position: absolute;
            top: 90px;
            left: 210px; /* Right of the avatar */
            color: white;
        }

        .user-name {
            font-size: 32px;
            font-weight: 700;
            text-transform: uppercase;
            margin: 0;
            letter-spacing: 1px;
        }

        .user-title {
            font-size: 16px;
            font-weight: 300;
            opacity: 0.9;
            margin-top: 5px;
        }

        /* --- 4. TYPOGRAPHY & SECTIONS --- */
        h3.section-title {
            font-size: 16px;
            font-weight: 700;
            text-transform: uppercase;
            color: var(--text-dark);
            border-bottom: 2px solid var(--primary-color);
            padding-bottom: 5px;
            margin-bottom: 15px;
            margin-top: 30px;
            letter-spacing: 1px;
        }

        /* Sidebar Items */
        .contact-item {
            font-size: 12px;
            color: var(--text-dark);
            margin-bottom: 8px;
            display: flex;
            align-items: center;
        }
        .contact-icon {
            width: 20px;
            color: var(--primary-color);
            font-weight: bold;
        }

        .skill-tag {
            display: inline-block;
            font-size: 12px;
            color: var(--text-dark);
            margin-bottom: 5px;
            width: 100%;
        }

        /* Main Content Items */
        .job-entry, .edu-entry { margin-bottom: 25px; }
        
        .job-title {
            font-size: 16px;
            font-weight: 700;
            color: var(--text-dark);
        }
        
        .job-company {
            font-size: 14px;
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 5px;
        }

        .job-date {
            float: right;
            font-size: 12px;
            color: #888;
            font-style: italic;
        }

        .job-desc {
            font-size: 13px;
            color: var(--text-light);
            line-height: 1.5;
            white-space: pre-line; /* Preserves line breaks from textarea */
        }
    </style>
</head>
<body>

    <div class="header">
        <div class="header-text">
            <h1 class="user-name"><%= user.firstName %> <%= user.lastName %></h1>
            <div class="user-title"><%= user.headline %></div>
        </div>
    </div>

    <div class="profile-container">
        <% if (profilePicBase64) { %>
            <img src="<%= profilePicBase64 %>" class="avatar">
        <% } else { %>
            <div class="avatar" style="background:#ccc; display:flex; align-items:center; justify-content:center; font-size:40px; color:white;">
                <%= user.firstName.charAt(0) %>
            </div>
        <% } %>
    </div>

    <div class="container">
        <div class="sidebar">
            <h3 class="section-title">Contact</h3>
            <div class="contact-item"><span class="contact-icon">P</span> <%= user.contactInfo.phone || 'N/A' %></div>
            <div class="contact-item"><span class="contact-icon">E</span> <%= user.email %></div>
            <div class="contact-item"><span class="contact-icon">L</span> <%= user.location %></div>
            <% if(user.contactInfo.linkedin) { %>
                <div class="contact-item"><span class="contact-icon">In</span> linkedin.com/in/...</div>
            <% } %>

            <h3 class="section-title">Profile</h3>
            <p style="font-size:12px; line-height:1.6; color:#666;">
                <%= user.about || "No profile summary provided." %>
            </p>

            <h3 class="section-title">Skills</h3>
            <% if (user.skills && user.skills.length > 0) { %>
                <% user.skills.forEach(skill => { %>
                    <span class="skill-tag">â€¢ <%= skill %></span>
                <% }) %>
            <% } %>

            <h3 class="section-title">Languages</h3>
            <% if (user.languages && user.languages.length > 0) { %>
                <% user.languages.forEach(lang => { %>
                    <div style="margin-bottom:5px; font-size:12px;">
                        <strong><%= lang.name %></strong> <span style="color:#888">- <%= lang.level %></span>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <div class="main-content">
            <h3 class="section-title" style="margin-top:0;">Experience</h3>
            <% if (user.experiences && user.experiences.length > 0) { %>
                <% user.experiences.forEach(exp => { %>
                    <div class="job-entry">
                        <div>
                            <span class="job-title"><%= exp.title %></span>
                            <span class="job-date"><%= exp.duration %></span>
                        </div>
                        <div class="job-company"><%= exp.company %></div>
                        <div class="job-desc"><%= exp.description %></div>
                    </div>
                <% }) %>
            <% } else { %>
                <p style="font-size:13px; color:#999;">No experience listed.</p>
            <% } %>

            <h3 class="section-title">Education</h3>
            <% if (user.education && user.education.length > 0) { %>
                <% user.education.forEach(edu => { %>
                    <div class="edu-entry">
                        <div>
                            <span class="job-title"><%= edu.degree %></span>
                            <span class="job-date"><%= edu.year %></span>
                        </div>
                        <div class="job-company"><%= edu.university %>, <%= edu.location %></div>
                    </div>
                <% }) %>
            <% } else { %>
                <p style="font-size:13px; color:#999;">No education listed.</p>
            <% } %>
        </div>
    </div>

</body>
</html>